{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "bun": "1.3"
  },
  "steps": {
    "install": {
      "commands": ["bun install --frozen-lockfile"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["bun run build"]
    }
  },
  "deploy": {
    "startCommand": "cd apps/web && bun run start"
  }
}
