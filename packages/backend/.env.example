# Convex Deployment
# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=dev:your-deployment-name
CONVEX_URL=https://your-deployment-name.convex.cloud

# Site URL
SITE_URL=http://localhost:3003

# ----------------------------- Google AI -----------------------------
# API key for AI agent features
# Get from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# ----------------------------- Better Auth -----------------------------
# Generate with: openssl rand -base64 32
# npx convex env set BETTER_AUTH_SECRET=$(openssl rand -base64 32)
BETTER_AUTH_SECRET=

# ----------------------------- GitHub OAuth -----------------------------
# Create a GitHub OAuth App: https://github.com/settings/developers
# npx convex env set GITHUB_CLIENT_ID="your_client_id"
# npx convex env set GITHUB_CLIENT_SECRET="your_client_secret"
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ----------------------------- Stripe (Billing) -----------------------------
# Get from: https://dashboard.stripe.com/apikeys
# npx convex env set STRIPE_SECRET_KEY="sk_test_..."
STRIPE_SECRET_KEY=

# Webhook signing secret - Get from Stripe webhook endpoint settings
# Create webhook at: https://dashboard.stripe.com/webhooks
# Endpoint URL: https://your-deployment.convex.site/stripe/webhook
# Required events:
#   - checkout.session.completed
#   - customer.created
#   - customer.subscription.created
#   - customer.subscription.updated
#   - customer.subscription.deleted
#   - invoice.paid
#   - invoice.payment_failed
#   - payment_intent.succeeded
# npx convex env set STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for Pro subscription
# Create products at: https://dashboard.stripe.com/products
# Pro Monthly: $29/month recurring
# Pro Yearly: $290/year recurring
# npx convex env set STRIPE_PRICE_PRO_MONTHLY="price_..."
# npx convex env set STRIPE_PRICE_PRO_YEARLY="price_..."
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_YEARLY=

# ----------------------------- Resend (Email) -----------------------------
# Get from: https://resend.com/api-keys
# npx convex env set RESEND_API_KEY="re_..."
RESEND_API_KEY=
