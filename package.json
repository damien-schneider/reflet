{
  "name": "reflet",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.3.6",
      "typescript": "^5",
      "convex": "^1.31.7",
      "better-auth": "1.4.9",
      "@convex-dev/better-auth": "^0.10.9",
      "@convex-dev/agent": "^0.3.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @reflet/backend dev",
    "dev:setup": "turbo -F @reflet/backend dev:setup",
    "start": "turbo -F web start",
    "prepare": "husky",
    "clean": "rm -rf node_modules .turbo .next bun.lock && bun install",
    "test:e2e": "cd apps/web && bunx playwright test --reporter=list",
    "test:unit": "turbo run test:unit --filter=web"
  },
  "dependencies": {
    "@reflet/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@playwright/test": "^1.58.1",
    "@reflet/config": "workspace:*",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "turbo": "^2.8.1",
    "typescript": "catalog:",
    "ultracite": "7.1.3",
    "web": "workspace:*"
  },
  "packageManager": "bun@1.3.5"
}
